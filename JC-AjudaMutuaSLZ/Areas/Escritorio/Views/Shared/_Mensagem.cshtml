@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.ErrTitulo</title>
    <!-- Le styles -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    
    <!-- Le Scripts -->
    <script src="~/Scripts/jquery-2.1.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/modernizr-2.7.2.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/respond.min.js"></script>
</head>
<body>
    @*<div class="container">*@
        @using (Html.BeginForm("Index", "Home", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin text-center" }))
        {
            <div class="panel panel-primary">
                <div class="panel-heading " >
                    <h3 class="form-signin-heading">@ViewBag.ErrTitulo</h3>
                </div>
                <div class="panel-body">
                    <img src="~/Images/JCarvalho_azul_2.png" class="img-rounded" />
                    <h1>@ViewBag.ErrTituloMensagem</h1>
                    <h4>@ViewBag.ErrMensagem&hellip;</h4>
                    @*@Html.ActionLink("OK", "Index", "Home", null, new { @class= "btn btn-lg btn-success btn-block" })*@  
                    @if (@Request.IsAuthenticated)
                    {
                        @Html.ActionLink("OK", "Index", "Home", null, new { @class= "btn btn-lg btn-success btn-block" })  
                    } else {  
                        @Html.ActionLink("OK", "Index", "ValidaUsuario", null, new { @class= "btn btn-lg btn-success btn-block" })
                    }
                </div>
            </div>
        }
    @*</div>*@
</body>
</html>
