<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        @using (Html.BeginForm("EnviarArquivo", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel"> Enviar Arquivo do Comprovante</h4>
                </div>
                <div class="modal-body">
                    <p>Enviar o arquivo para <em><small>"<span></span>"</small></em>&nbsp;?</p>
                    <input type="hidden" class="form-control" id="inputIDHidden" name="id" />
                    <input type="hidden" class="form-control" id="inputLogin" name="Login" />
                    <br/>
                    <input id="file" name="file" type="file" accept="image/x-png, image/gif, image/jpeg, image/jpg" />
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success" type="submit">Enviar</button>
                </div>
            </div><!-- /.modal-content -->
        }
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
